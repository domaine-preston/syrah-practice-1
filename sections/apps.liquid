<div class='{% if section.settings.include_margins %}px-pagemargin{% endif %} {% if section.settings.include_container %}2xl:container{% endif %}'>
  {%- for block in section.blocks -%}
    {% render block %}
  {%- endfor -%}
</div>

{% schema %}
{
  "name": "t:sections.apps.name",
  "settings": [
    {
      "type": "checkbox",
      "id": "include_margins",
      "default": true,
      "label": "t:sections.apps.settings.include_margins.label"
    },
    {
      "type": "checkbox",
      "id": "include_container",
      "default": true,
      "label": "t:sections.apps.settings.include_container.label"
    }
  ],
  "blocks": [
    {
      "type": "@app"
    }
  ],
  "presets": [
    {
      "name": "t:sections.apps.presets.name",
      "category": "t:sections.apps.presets.name"
    }
  ]
}
{% endschema %}
